\begin_layout Standard
Additionally, a similar simplification will be done for angular velocity.
 
\end_layout

\begin_layout Standard
In any collision, momentum is conserved (linear momentum and angular momentum).
 The equation for conservation of linear momentum is
\end_layout

\begin_layout Standard
\begin_inset Formula \[
m_{1}\hat{v_{1}}+m_{2}\hat{v_{2}}=m_{1}\hat{V_{1}}+m_{2}\hat{V_{2}}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=m_{1}\hat{V_{1}}-m_{1}\hat{v_{1}}+m_{2}\hat{V_{2}}-m_{2}\hat{v_{2}}\]

\end_inset


\end_layout

\begin_layout Standard
Substitute the values of 
\begin_inset Formula $c_{k}\hat{N}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=c_{1}\hat{N}+c_{2}\hat{N}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\left(c_{1}+c_{2}\right)\hat{N}\]

\end_inset


\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\left\Vert \hat{N}\right\Vert =1$
\end_inset

, it cannot be the zero vector, so the only way to satisfy that equation
 is if
\end_layout

\begin_layout Standard
\begin_inset Formula \[
c_{1}+c_{2}=0\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
c_{2}=-c_{1}\]

\end_inset


\end_layout

\begin_layout Standard
Plug this value of 
\begin_inset Formula $c_{2}$
\end_inset

 back into (
\begin_inset LatexCommand \ref{eq:Vk}

\end_inset

).
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\hat{V_{2}}=\hat{v_{2}}-\frac{c_{1}}{m_{2}}\hat{N}\]

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $\hat{x}$
\end_inset

 be a stationary point indicating a frame of reference.
 The equation for conservation of angular momentum is
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\left(\hat{g_{1}}-\hat{x}\right)\times\left(m_{1}\hat{v_{1}}\right)+\mathbf{M}_{2}\hat{\omega_{2}}+\left(\hat{g_{2}}-\hat{x}\right)\times\left(m_{2}\hat{v_{2}}\right)=\mathbf{M}_{1}\hat{\Omega_{1}}+\left(\hat{g_{1}}-\hat{x}\right)\times\left(m_{1}\hat{V_{1}}\right)+\mathbf{M}_{2}\hat{\Omega_{2}}+\left(\hat{g_{2}}-\hat{x}\right)\times\left(m_{2}\hat{V_{2}}\right)\]

\end_inset


\end_layout

\begin_layout Standard
To simplify this equation, let 
\begin_inset Formula $\hat{x}=\hat{0}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{v_{1}}\right)+\mathbf{M}_{2}\hat{\omega_{2}}+\hat{g_{2}}\times\left(m_{2}\hat{v_{2}}\right)=\mathbf{M}_{1}\hat{\Omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{V_{1}}\right)+\mathbf{M}_{2}\hat{\Omega_{2}}+\hat{g_{2}}\times\left(m_{2}\hat{V_{2}}\right)\]

\end_inset


\end_layout

\begin_layout Standard
Substitute in for 
\begin_inset Formula $m_{k}\hat{V_{k}}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{v_{1}}\right)+\mathbf{M}_{2}\hat{\omega_{2}}+\hat{g_{2}}\times\left(m_{2}\hat{v_{2}}\right)=\mathbf{M}_{1}\hat{\Omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{v_{1}}+c_{1}\hat{N}\right)+\mathbf{M}_{2}\hat{\Omega_{2}}+\hat{g_{2}}\times\left(m_{1}\hat{v_{1}}-c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{v_{1}}\right)+\mathbf{M}_{2}\hat{\omega_{2}}+\hat{g_{2}}\times\left(m_{2}\hat{v_{2}}\right)=\mathbf{M}_{1}\hat{\Omega_{1}}+\hat{g_{1}}\times\left(m_{1}\hat{v_{1}}\right)+\hat{g_{1}}\times\left(c_{1}\hat{N}\right)+\mathbf{M}_{2}\hat{\Omega_{2}}+\hat{g_{2}}\times\left(m_{1}\hat{v_{1}}\right)-\hat{g_{2}}\times\left(c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
The terms 
\begin_inset Formula $\hat{g_{k}}\times\left(m_{k}\hat{v_{k}}\right)$
\end_inset

 cancel.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\mathbf{M}_{2}\hat{\omega_{2}}=\mathbf{M}_{1}\hat{\Omega_{1}}+\mathbf{M}_{2}\hat{\Omega_{2}}+\hat{g_{1}}\times\left(c_{1}\hat{N}\right)-\hat{g_{2}}\times\left(c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\mathbf{M}_{2}\hat{\omega_{2}}=\mathbf{M}_{1}\hat{\Omega_{1}}+\mathbf{M}_{2}\hat{\Omega_{2}}+\left(\hat{g_{1}}-\hat{g_{2}}\right)\times\left(c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
An unknown scalar 
\begin_inset Formula $q_{k}$
\end_inset

 for each body will be introduced to give the magnitude of the change in
 angular momentum.
 The values of 
\begin_inset Formula $q_{k}$
\end_inset

 scale a normalized torque vector 
\begin_inset Formula $\hat{N}\times\left(\hat{g_{k}}-\hat{R}\right)$
\end_inset

 to give actual torque.
 The equation is given also with additional useful permutations.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
q_{k}\left[\hat{N}\times\left(\hat{g_{k}}-\hat{R}\right)\right]=\mathbf{M}_{k}\hat{\Omega_{k}}-\mathbf{M}_{k}\hat{\omega_{k}}\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{k}\hat{\Omega_{k}}=\mathbf{M}_{k}\hat{\omega_{k}}+q_{k}\left[\hat{N}\times\left(\hat{g_{k}}-\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
\hat{\Omega_{k}}=\hat{\omega_{k}}+q_{k}\mathbf{M}_{k}^{-1}\left[\hat{N}\times\left(\hat{g_{k}}-\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
Substitute in for 
\begin_inset Formula $\mathbf{M}_{k}\hat{\Omega_{k}}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\mathbf{M}_{1}\hat{\omega_{1}}+\mathbf{M}_{2}\hat{\omega_{2}}=\mathbf{M}_{1}\hat{\omega_{1}}+q_{1}\left[\hat{N}\times\left(\hat{g_{1}}-\hat{R}\right)\right]+\mathbf{M}_{2}\hat{\omega_{2}}+q_{2}\left[\hat{N}\times\left(\hat{g_{2}}-\hat{R}\right)\right]+\left(\hat{g_{1}}-\hat{g_{2}}\right)\times\left(c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
The 
\begin_inset Formula $\mathbf{M}_{k}\hat{\omega_{k}}$
\end_inset

 terms cancel out.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=q_{1}\left[\hat{N}\times\left(\hat{g_{1}}-\hat{R}\right)\right]+q_{2}\left[\hat{N}\times\left(\hat{g_{2}}-\hat{R}\right)\right]+\left(\hat{g_{1}}-\hat{g_{2}}\right)\times\left(c_{1}\hat{N}\right)\]

\end_inset


\end_layout

\begin_layout Standard
Switch the order and sign of the last cross product (
\begin_inset Formula $\hat{g_{1}}-\hat{g_{2}}$
\end_inset

 was switched to 
\begin_inset Formula $\hat{g_{2}}-\hat{g_{1}}$
\end_inset

 to switch sign).
\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=q_{1}\left[\hat{N}\times\left(\hat{g_{1}}-\hat{R}\right)\right]+q_{2}\left[\hat{N}\times\left(\hat{g_{2}}-\hat{R}\right)\right]+c_{1}\left[\hat{N}\times\left(\hat{g_{2}}-\hat{g_{1}}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[q_{1}\left(\hat{g_{1}}-\hat{R}\right)+q_{2}\left(\hat{g_{2}}-\hat{R}\right)+c_{1}\left(\hat{g_{2}}-\hat{g_{1}}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
Do some identity fanciness and commutation.
\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[q_{1}\left(\hat{g_{1}}-\hat{R}\right)+q_{2}\left(\hat{g_{2}}-\hat{R}\right)+c_{1}\left(\hat{g_{2}}-\hat{g_{1}}-\hat{R}+\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[q_{1}\left(\hat{g_{1}}-\hat{R}\right)+q_{2}\left(\hat{g_{2}}-\hat{R}\right)+c_{1}\left(\hat{g_{2}}-\hat{R}-\hat{g_{1}}+\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[q_{1}\left(\hat{g_{1}}-\hat{R}\right)+q_{2}\left(\hat{g_{2}}-\hat{R}\right)+c_{1}\left(\hat{g_{2}}-\hat{R}\right)-c_{1}\left(\hat{g_{1}}-\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[q_{1}\left(\hat{g_{1}}-\hat{R}\right)-c_{1}\left(\hat{g_{1}}-\hat{R}\right)+q_{2}\left(\hat{g_{2}}-\hat{R}\right)+c_{1}\left(\hat{g_{2}}-\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula \[
0=\hat{N}\times\left[\left(q_{1}-c_{1}\right)\left(\hat{g_{1}}-\hat{R}\right)+\left(q_{2}+c_{1}\right)\left(\hat{g_{2}}-\hat{R}\right)\right]\]

\end_inset


\end_layout

\begin_layout Standard
This equation is satisfied if
\end_layout

\begin_layout Standard
\begin_inset Formula \[
\left(q_{1}-c_{1}\right)\left(\hat{g_{1}}-\hat{R}\right)+\left(q_{2}+c_{1}\right)\left(\hat{g_{2}}-\hat{R}\right)=\lambda\hat{N}\]

\end_inset


\end_layout

\begin_layout Standard
for some 
\begin_inset Formula $\lambda\in\mathbb{R}$
\end_inset

.
 However, 
\begin_inset Formula $\left(\hat{g_{1}}-\hat{R}\right)$
\end_inset

 and 
\begin_inset Formula $\left(\hat{g_{2}}-\hat{R}\right)$
\end_inset

 may be linearly independent, in which case, the only solution is
\end_layout

\begin_layout Standard
\begin_inset Formula \[
0\cdot\left(\hat{g_{1}}-\hat{R}\right)+0\cdot\left(\hat{g_{2}}-\hat{R}\right)=0\cdot\hat{N}\]

\end_inset


\end_layout

\begin_layout Standard
The case where 
\begin_inset Formula $\left(\hat{g_{1}}-\hat{R}\right)$
\end_inset

 and 
